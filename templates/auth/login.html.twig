{% extends 'auth/base-register.html.twig' %}

{% block body %}

    <h1>Se connecter</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <label for="username">E-mail</label>
            <input type="text" value="{{ email }}" name="_username" id="username" required>

            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" required>

            <button type="submit" class="button button-submit">Continuer</button>
            <a href="{{ path('app_register') }}" class="link-logout">Pas de compte ? S'inscrire</a>
        </form>

{% endblock %}